@{
    ViewData["Title"] = "Welcome to Toki Pona";
}

<!-- Hero Section -->
<section class="hero fade-in" style="text-align: center; padding: 4rem 1rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 0 0 2rem 2rem; margin-bottom: 3rem;">
    <div class="container">
        <h1 style="font-size: 3rem; font-weight: 800; margin-bottom: 1rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">
            Learn Toki Pona
        </h1>
        <p style="font-size: 1.5rem; margin-bottom: 2rem; opacity: 0.95;">
            The simplest language in the world - Only 120 words!
        </p>
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a asp-controller="Quiz" asp-action="Index" class="btn-custom" style="text-decoration: none;">
                Start Learning →
            </a>
            <a asp-controller="Lessons" asp-action="Index" class="btn-outline" style="text-decoration: none; background: rgba(255,255,255,0.2); border-color: white; color: white;">
                Browse Lessons
            </a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="container" style="margin-bottom: 4rem;">
    <h2 style="text-align: center; font-size: 2.5rem; font-weight: 700; margin-bottom: 3rem; color: #1e40af;">
        Why Learn Toki Pona?
    </h2>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
        <!-- Feature Card 1 -->
        <div class="card-container slide-in" style="text-align: center;">
            <div style="font-size: 3rem; margin-bottom: 1rem;">🚀</div>
            <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1rem; color: #2563eb;">
                Simple & Fast
            </h3>
            <p style="color: #64748b; line-height: 1.8;">
                With only 120 words, you can learn the entire vocabulary in weeks, not years. Perfect for beginners!
            </p>
        </div>

        <!-- Feature Card 2 -->
        <div class="card-container slide-in" style="text-align: center; animation-delay: 0.1s;">
            <div style="font-size: 3rem; margin-bottom: 1rem;">🧠</div>
            <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1rem; color: #8b5cf6;">
                Think Differently
            </h3>
            <p style="color: #64748b; line-height: 1.8;">
                Toki Pona teaches you to express complex ideas with simple words. Train your mind to think creatively!
            </p>
        </div>

        <!-- Feature Card 3 -->
        <div class="card-container slide-in" style="text-align: center; animation-delay: 0.2s;">
            <div style="font-size: 3rem; margin-bottom: 1rem;">🌍</div>
            <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1rem; color: #06b6d4;">
                Global Community
            </h3>
            <p style="color: #64748b; line-height: 1.8;">
                Join thousands of learners worldwide. Toki Pona brings people together with its philosophy of simplicity.
            </p>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); padding: 3rem 1rem; border-radius: 2rem; margin: 3rem auto; max-width: 1200px;">
    <div class="container">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; text-align: center; color: white;">
            <div>
                <div style="font-size: 3rem; font-weight: 800;">120</div>
                <div style="font-size: 1.25rem; opacity: 0.9;">Total Words</div>
            </div>
            <div>
                <div style="font-size: 3rem; font-weight: 800;">14</div>
                <div style="font-size: 1.25rem; opacity: 0.9;">Letters</div>
            </div>
            <div>
                <div style="font-size: 3rem; font-weight: 800;">5</div>
                <div style="font-size: 1.25rem; opacity: 0.9;">Vowels</div>
            </div>
            <div>
                <div style="font-size: 3rem; font-weight: 800;">∞</div>
                <div style="font-size: 1.25rem; opacity: 0.9;">Possibilities</div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="container" style="margin: 4rem auto;">
    <h2 style="text-align: center; font-size: 2.5rem; font-weight: 700; margin-bottom: 3rem; color: #1e40af;">
        How It Works
    </h2>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
        <div style="text-align: center;">
            <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem; font-weight: 700;">
                1
            </div>
            <h4 style="font-weight: 700; margin-bottom: 0.5rem;">Start with Basics</h4>
            <p style="color: #64748b;">Learn the core 20 words that form the foundation</p>
        </div>

        <div style="text-align: center;">
            <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #f093fb, #f5576c); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem; font-weight: 700;">
                2
            </div>
            <h4 style="font-weight: 700; margin-bottom: 0.5rem;">Practice Daily</h4>
            <p style="color: #64748b;">Take interactive quizzes to reinforce your learning</p>
        </div>

        <div style="text-align: center;">
            <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #4facfe, #00f2fe); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem; font-weight: 700;">
                3
            </div>
            <h4 style="font-weight: 700; margin-bottom: 0.5rem;">Master the Language</h4>
            <p style="color: #64748b;">Complete all 120 words and start communicating!</p>
        </div>
    </div>
</section>

